<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pfau_partner_partner_view_form" model="ir.ui.view">
            <field name="name">pfau.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="priority">1</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']//group[@name='container_row_2']//group[@name='purchase']" position="inside">
                    <field name="is_vandor" />
                    <field name="supplier_discount" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>